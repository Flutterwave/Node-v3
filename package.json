    "chai-as-promised-also-chain": "^1.0.2",
    "eslint-config-prettier": "^8.6.0",
    "joi": "^17.8.3",
    "md5": "^2.3.0",
    "node-forge": "1.3.0",
    "q": "^1.5.1",
    "sha.js": "^2.4.11",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.8.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
